<%- include('partials/header')%>




<form action="/results" class="container well" style="text-align: center;">
    <div style="padding: 30px;">
    
    <label for="usd">USD:
    <input type="checkbox" name="currency" id="usd" value='USD'>
    </label>
    <label for="gbp">GBP:
    <input type="checkbox" name="currency" id="gbp" value= 'GBP' >
    </label>
    <label for="eur">EUR:
    <input type="checkbox" name="currency" id="eur" value= 'EUR' >
    </label>
    <button type="submit" id="submit" >Get Price</button>
    </div>
    


    <div class="results">
        <h2 class="h2" style="font-size: 30px;">The current price is:</h2>
      <strong> <p style="font-size: 20px;"><%= data.description%> : <%- data.symbol%> <%= data.rate_float.toFixed(2) %></p> </strong> 
    </div>
    </form>






<%- include('partials/footer')%>